<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaDeAbertura.StartActivity"
    android:background="@color/AzulMedio">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        />

    <TextView
        android:id="@+id/NomeDoApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S.A.F.E"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/Branco"
        android:layout_above="@id/NomeDoAppDesc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        />

    <TextView
        android:id="@+id/NomeDoAppDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sistema autÃ´nomo de ferramentas estudantis"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/Branco"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        />

</android.widget.RelativeLayout>