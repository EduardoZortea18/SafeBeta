<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ferramentas_de_calculo.Matematica.RegraDeTres">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:text='Informe os valores e onde ficarÃ¡ o "X"'
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <EditText
                android:id="@+id/txtn1RTS"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:ems="10"
                android:gravity="center"
                android:layout_margin="2dp"
                android:inputType="textUri|textShortMessage"
                android:digits="0123456789-xX." />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="="
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>


            <EditText
                android:id="@+id/txtn2RTS"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:ems="10"
                android:gravity="center"
                android:layout_margin="2dp"
                android:inputType="textUri|textShortMessage"
                android:digits="0123456789-xX." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal">

            <EditText
                android:id="@+id/txtn3RTS"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:ems="10"
                android:gravity="center"
                android:layout_margin="2dp"
                android:inputType="textUri|textShortMessage"
                android:digits="0123456789-xX." />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="="
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <EditText
                android:id="@+id/txtn4RTS"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:ems="10"
                android:gravity="center"
                android:layout_margin="2dp"
                android:inputType="textUri|textShortMessage"
                android:digits="0123456789-xX." />

        </LinearLayout>

        <TextView
            android:id="@+id/txtResultadoRTS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:layout_gravity="center_horizontal"
            android:text="Valor de X = "
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Button
            android:id="@+id/btnResolverRTS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="resolverRegraDeTres"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Resolver"
            android:backgroundTint="@color/AzulClaro"
            android:textColor="@color/Branco"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </LinearLayout>
</ScrollView>