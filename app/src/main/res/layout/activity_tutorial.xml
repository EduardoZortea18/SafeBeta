<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tutorial.MainTutorial"
    android:background="@color/AzulMedio">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pagerTutorial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tabsTutorial"
        >

    </androidx.viewpager.widget.ViewPager>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabsTutorial"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:tabIndicatorGravity="center"
        app:tabIndicatorColor="@color/Branco"
        />

    <Button
        android:id="@+id/btnTutorial1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:text="Anterior"
        android:textColor="@color/Branco"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/btnTutorial2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:text="PrÃ³ximo"
        android:textColor="@color/Branco"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</android.widget.RelativeLayout>