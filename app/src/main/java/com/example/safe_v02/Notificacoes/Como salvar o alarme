private void updateTimeText(Calendar c) {
        String horario = DateFormat.getTimeInstance(DateFormat.SHORT).format(c.getTime());
        txtHorarioAlarme.setText(horario);
    }

    private void salvarAlarme(Calendar c) {
        AlarmManager alarmManager = (AlarmManager) getSystemService(Context.ALARM_SERVICE);
        Intent intent = new Intent(this, AlertReceiver.class);
        intent.putExtra("Titulo",txtTituloAlarme.getText().toString());
        intent.putExtra("Descricao",txtDescricaoAlarme.getText().toString());
        final int id = (int) System.currentTimeMillis();
        PendingIntent pendingIntent = PendingIntent.getBroadcast(this, id, intent, PendingIntent.FLAG_ONE_SHOT);

        if (c.before(Calendar.getInstance())) {
            c.add(Calendar.DATE, 1);
        }

        alarmManager.setExact(AlarmManager.RTC_WAKEUP, c.getTimeInMillis(), pendingIntent);
        String horario = DateFormat.getTimeInstance(DateFormat.SHORT).format(c.getTime());
        Toast.makeText(this, "Alarme salvo para Ã s "+horario, Toast.LENGTH_SHORT).show();
    }

    private void cancelarAlarme() {
        AlarmManager alarmManager = (AlarmManager) getSystemService(Context.ALARM_SERVICE);
        Intent intent = new Intent(this, AlertReceiver.class);
        PendingIntent pendingIntent = PendingIntent.getBroadcast(this, 1, intent, 0);

        alarmManager.cancel(pendingIntent);
        Toast.makeText(this, "Alarme cancelado", Toast.LENGTH_SHORT).show();
    }